startup_message off
defutf8 on
setenv LC_CTYPE en_GB.UTF-8
escape ^Aa
defscrollback 10000
altscreen on
vbell off
shelltitle '] |bash'
caption always "%?%F%{= Kw}%:%{=u kR}%? %h %-024=%{-b} %C%a %D %d %M %Y%{= db}"
hardstatus alwayslastline
hardstatus string "%{= kR} %-Lw%{=b kw} %n%f %t %{-}%+Lw %=%{= dd}"
nethack off
shelltitle "$ |bash"
# Ctrl-Tab
#bindkey "^[[27;5;9~" next
# Ctrl-Shift-Tab
#bindkey "^[[27;6;9~" prev
bindkey -k "F1" prev
bindkey -k "F2" next

termcapinfo xterm* ti@:te@
